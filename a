        <script>
            $(document).ready(function () {
                $("#addBank").click(function (event) {
                    event.preventDefault();
                    $(this).hide();
                    $("#addOptBankForm").show();
                    $(".add-bank-form").show();
                    $("#submitBank").show();
                    $("#cancelBank").show();
                });
        
                $("#cancelBank").click(function (event) {
                    event.preventDefault();
                    $("#addOptBankForm").hide();
                    $(".add-bank-form").hide();
                    $("#addBank").show();
                    $("#cancelBank").hide();
                    $("#submitBank").hide();
                });
            });
        </script>
