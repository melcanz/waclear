        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var isExpired = <?php echo json_encode($isExpired); ?>;
                var checkoutUrl = <?php echo json_encode($checkoutUrl); ?>;
        
                document.getElementById('btnInstant').addEventListener('click', function () {
                    console.log('btnInstant clicked');
                    if (!isExpired && checkoutUrl) {
                        window.location.href = checkoutUrl;
                    } else {
                        document.getElementById('formInstantDeposit').style.display = 'block';
                        document.getElementById('formDeposit').style.display = 'none';
                        this.classList.add('active');
                        document.getElementById('btnManual').classList.remove('active');
                    }
                });
        
                document.getElementById('btnManual').addEventListener('click', function () {
                    document.getElementById('formInstantDeposit').style.display = 'none';
                    document.getElementById('formDeposit').style.display = 'block';
                    this.classList.add('active');
                    document.getElementById('btnInstant').classList.remove('active');
                });
            });
        </script>
        <script>
            $(document).ready(function () {
                // Ketika elemen <select> berubah
                $("#bankSelect").change(function () {
                    // Mendapatkan nilai yang dipilih
                    var selectedValue = $(this).val();
        
                    // Semua section yang memiliki class "bankOption" disembunyikan
                    $(".bankOption").hide();
        
                    // Menampilkan elemen dengan ID yang sesuai berdasarkan pilihan
                    if (selectedValue !== "") {
                        $("#epayment-" + selectedValue).show();
                    }
                });
        
                // Event listener untuk semua elemen dengan class "copyAddress"
                $(document).on('click', '.copyAddress', function () {
                    // Mendapatkan nomor rekening dari atribut data-rekening
                    var textToCopy = $(this).data('rekening');
        
                    // Membuat elemen textarea sementara
                    var tempTextarea = document.createElement('textarea');
                    tempTextarea.value = textToCopy;
                    document.body.appendChild(tempTextarea);
        
                    // Memilih teks dan menyalinnya ke clipboard
                    tempTextarea.select();
                    document.execCommand('copy');
        
                    // Menghapus elemen sementara
                    document.body.removeChild(tempTextarea);
        
                    // Menampilkan pesan bahwa teks telah disalin
                    alert('Nomor rekening berhasil disalin!');
                });
            });
        </script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const depositInput = document.getElementById('depositinput');
                const depositAmount = document.getElementById('depositAmount');
                const formDeposit = document.getElementById('formDeposit');
        
                // Fungsi untuk memformat nilai dengan "IDR : "
                function formatRupiah(angka) {
                    let number_string = angka.toString(),
                        sisa = number_string.length % 3,
                        rupiah = number_string.substr(0, sisa),
                        ribuan = number_string.substr(sisa).match(/\d{3}/g);
        
                    if (ribuan) {
                        separator = sisa ? '.' : '';
                        rupiah += separator + ribuan.join('.');
                    }
        
                    return 'IDR : ' + rupiah;
                }
        
                depositInput.addEventListener('input', function () {
                    let value = depositInput.value;
        
                    // Menghapus karakter non-digit
                    value = value.replace(/\D/g, '');
        
                    // Menambahkan tiga angka nol
                    if (value) {
                        value += '000';
                        depositAmount.value = formatRupiah(value);
                    } else {
                        depositAmount.value = 'IDR : ';
                    }
                });
        
                formDeposit.addEventListener('submit', function (event) {
                    // Menghapus format mata uang dari nilai depositAmount sebelum pengiriman
                    const rawAmount = depositAmount.value.replace(/IDR : /, '').replace(/\./g, '');
                    depositAmount.value = rawAmount;
                });
        
                // Inisialisasi dengan "IDR : "
                depositAmount.value = 'IDR : ';
            });
        </script>
        <script>
            function updateHiddenBankInput() {
                var select = document.getElementById('bankid');
                var hiddenInput = document.getElementById('hiddenBankInput');
                hiddenInput.value = select.value;
            }
        
            // Fungsi untuk memformat nilai dengan "IDR : "
            function formatRupiah(angka) {
                let number_string = angka.toString(),
                    sisa = number_string.length % 3,
                    rupiah = number_string.substr(0, sisa),
                    ribuan = number_string.substr(sisa).match(/\d{3}/g);
        
                if (ribuan) {
                    separator = sisa ? '.' : '';
                    rupiah += separator + ribuan.join('.');
                }
        
                return 'IDR : ' + rupiah;
            }
        
            document.addEventListener('DOMContentLoaded', function () {
                const withdrawInput = document.getElementById('withdrawAmount');
                const withdrawAmountFormatted = document.getElementById('withdrawAmountFormatted');
                const formWithdraw = document.getElementById('formWithdraw');
        
                withdrawInput.addEventListener('input', function () {
                    let value = withdrawInput.value;
        
                    // Menghapus karakter non-digit
                    value = value.replace(/\D/g, '');
        
                    // Menambahkan tiga angka nol
                    if (value) {
                        value += '000';
                        withdrawAmountFormatted.value = formatRupiah(value);
                    } else {
                        withdrawAmountFormatted.value = 'IDR : ';
                    }
                });
        
                formWithdraw.addEventListener('submit', function (event) {
                    // Menghapus format mata uang dari nilai withdrawAmountFormatted sebelum pengiriman
                    const rawAmount = withdrawAmountFormatted.value.replace(/IDR : /, '').replace(/\./g, '');
                    withdrawAmountFormatted.value = rawAmount;
                });
        
                // Initialize the hidden input with the first option's value
                updateHiddenBankInput();
        
                // Inisialisasi dengan "IDR : "
                withdrawAmountFormatted.value = 'IDR : ';
            });
        </script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const depositInputInstant = document.getElementById('depositinputinstant');
                const depositAmountInstant = document.getElementById('depositAmountInstant');
                const formDepositInstant = document.getElementById('formInstantDeposit');
        
                // Fungsi untuk memformat nilai dengan "IDR : "
                function formatRupiah(angka) {
                    let number_string = angka.toString(),
                        sisa = number_string.length % 3,
                        rupiah = number_string.substr(0, sisa),
                        ribuan = number_string.substr(sisa).match(/\d{3}/g);
        
                    if (ribuan) {
                        separator = sisa ? '.' : '';
                        rupiah += separator + ribuan.join('.');
                    }
        
                    return 'IDR : ' + rupiah;
                }
        
                depositInputInstant.addEventListener('input', function () {
                    let value = depositInputInstant.value;
        
                    // Menghapus karakter non-digit
                    value = value.replace(/\D/g, '');
        
                    // Menambahkan tiga angka nol
                    if (value) {
                        value += '000';
                        depositAmountInstant.value = formatRupiah(value);
                    } else {
                        depositAmountInstant.value = 'IDR : ';
                    }
                });
        
                formDepositInstant.addEventListener('submit', function (event) {
                    // Menghapus format mata uang dari nilai depositAmount sebelum pengiriman
                    const rawAmount = depositAmountInstant.value.replace(/IDR : /, '').replace(/\./g, '');
